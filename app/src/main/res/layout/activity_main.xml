<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tabletl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="15dp"
                android:layout_weight="1"
                android:text="Subjects"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:layout_width="15dp"
                android:layout_weight="1"
                android:text="Grades"
                android:textStyle="bold"
                android:padding="8dp" />


        </TableRow>


        <!-- table cells -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- distribute width evenly(width weight) -->
            <TextView
                android:id="@+id/subjectName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Physics"
                android:padding="8dp" />


            <TextView
                android:id="@+id/gradePhysics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="100%"
                android:padding="8dp" />
        </TableRow> <!-- end Physics grade -->


        <!-- start Chemistry grade -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- distribute width evenly (width weight) -->
            <TextView
                android:id="@+id/subjectChemistry"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Chemistry"
                android:padding="8dp" />

            <TextView
                android:id="@+id/gradeChemistry"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="100%"
                android:padding="8dp" />
        </TableRow> <!-- end Chemistry grade -->


        <!-- Mathematics grade -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- distribute width evenly (width weight) -->
            <TextView
                android:id="@+id/subjectMathematics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Mathematics"
                android:padding="8dp" />

            <TextView
                android:id="@+id/gradeMathematics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="61%"
                android:padding="8dp" />
        </TableRow> <!-- end Mathematics grade -->


        <!-- Economics grade -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- distribute width evenly (width weight) -->
            <TextView
                android:id="@+id/subjectEconomics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Economics"
                android:padding="8dp" />

            <TextView
                android:id="@+id/gradeEconomics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="47%"
                android:padding="8dp" />
        </TableRow> <!-- end Economics grade -->



    </TableLayout>


</RelativeLayout>